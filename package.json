{
  "name": "danimation-components",
  "version": "1.0.0",
  "description": "A collection of React components for Danimation",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build:demo": "vite build",
    "preview": "vite preview",
    "build:lib": "vite build --mode lib",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" \"demo/**/*.{js,jsx,ts,tsx}\"",
    "lint-fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" \"demo/**/*.{js,jsx,ts,tsx}\" --fix",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\" \"demo/**/*.{js,jsx,ts,tsx,css,md}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daniakabani/danimation-components"
  },
  "keywords": [
    "react",
    "components",
    "vite",
    "ui",
    "design-system"
  ],
  "author": "Dani Akabani",
  "license": "ISC",
  "homepage": "https://github.com/daniakabani/danimation-components",
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": "^6.0.0"
  },
  "dependencies": {
    "axios": "1.12.0",
    "classnames": "^2.3.1",
    "dotenv": "^17.2.3",
    "react-router-dom": "^7.10.1",
    "react-select": "^5.10.2",
    "react-toggle": "^4.1.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  }
}
